.Chat-side
  .Chat-side__user
    .Chat-side__user__top-items
      .Chat-side__user__top-items__name
        = current_user.name
      %ul.Chat-side__user__top-items__icons
        %li
          =link_to new_group_path, class: "Chat-side__user__top-items__icons__edit" do
            =icon('far', 'edit')
        %li
          =link_to edit_user_path(current_user), class: "Chat-side__user__top-items__icons__cog" do
            =icon('fas', 'cog')
  .Chat-side__groups
    - current_user.groups.each do |group|
      =link_to group_messages_path(group), class:"Chat-side__groups__block" do
        .Chat-side__groups__block__name
          = group.name
        .Chat-side__groups__block--message 
          = group.show_last_message
    